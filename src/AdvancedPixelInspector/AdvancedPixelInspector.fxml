<?xml version="1.0" encoding="UTF-8"?>

<?import AdvancedPixelInspector.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<TabPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
         minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE"
         xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="AdvancedPixelInspector.Controller">
    <Tab text="Color From Pixel">
        <AnchorPane fx:id="anchorPane" minHeight="0.0" minWidth="0.0" prefHeight="600.0" prefWidth="800.0">
            <Pane minHeight="0.0" minWidth="0.0" onKeyPressed="#panePressedWithKey"
                  onMouseClicked="#paneClickedWithMouse" prefHeight="600.0" prefWidth="800.0">
                <Label layoutX="100.0" layoutY="30.0" text="Pixel"/>
                <Label layoutX="30.0" layoutY="55.0" text="X"/>
                <LimitedTextField fx:id="txtX" layoutX="50.0" layoutY="50.0" maxLength="5" prefHeight="26.0"
                                  prefWidth="60.0"/>
                <Label layoutX="115.0" layoutY="55.0" text="Y"/>
                <LimitedTextField fx:id="txtY" layoutX="125.0" layoutY="50.0" maxLength="5" prefHeight="26.0"
                                  prefWidth="60.0"/>
                <Button layoutX="85.0" layoutY="85.0" mnemonicParsing="false" onAction="#btnJump" text="Jump"/>
                <Button layoutX="50.0" layoutY="140.0" mnemonicParsing="false" onAction="#btnUpdateScreen"
                        text="Update Screenshot"/>
                <Label layoutX="10.0" layoutY="200.0" text="int"/>
                <LimitedTextField fx:id="txtInt" layoutX="50.0" layoutY="195.0" maxLength="30"/>
                <Label layoutX="10" layoutY="230.0" text="rgb"/>
                <LimitedTextField fx:id="txtRGB" layoutX="50.0" layoutY="225.0" maxLength="30"/>
                <Label layoutX="10" layoutY="260.0" text="alpha"/>
                <LimitedTextField fx:id="txtAlpha" layoutX="50.0" layoutY="255.0" maxLength="30"/>
                <CheckBox fx:id="chkAddAllColors" layoutX="5.0" layoutY="281.0" mnemonicParsing="false"
                          prefHeight="55.0" prefWidth="251.0" text="Add all slected colors to ColorSpace"/>
                <Button layoutX="27.0" layoutY="323.0" mnemonicParsing="false" onAction="#addCurrentColor"
                        text="Add this color to ColorSpace"/>
                <Label fx:id="lblResponse" layoutX="113.0" layoutY="363.0"/>
                <Button layoutX="103.0" layoutY="389.0" mnemonicParsing="false" onAction="#btnUp" text="Up"/>
                <Button layoutX="28.0" layoutY="444.0" mnemonicParsing="false" onAction="#btnLeft" text="Left"/>
                <Canvas fx:id="canvasSmall" height="80.0" layoutX="78.0" layoutY="419.0" width="80.0"/>
                <Button layoutX="163.0" layoutY="444.0" mnemonicParsing="false" onAction="#btnRight" text="Right"/>
                <Button layoutX="93.0" layoutY="504.0" mnemonicParsing="false" onAction="#btnDown" text="Down"/>
                <Canvas fx:id="canvasBig" height="500.0" layoutX="275.0" layoutY="31.0"
                        onMouseClicked="#bigCanvasClickedWithMouse" width="500.0"/>
            </Pane>
        </AnchorPane>
    </Tab>
    <Tab text="Settings">
        <AnchorPane minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0">
            <Label layoutX="60.0" layoutY="30.0" text="Static Pixel Offset"/>
            <Label layoutX="30.0" layoutY="55.0" text="X"/>
            <LimitedTextField fx:id="txtOffsetX" layoutX="50.0" layoutY="50.0" maxLength="5" prefHeight="26.0"
                              prefWidth="60.0"/>
            <Label layoutX="115.0" layoutY="55.0" text="Y"/>
            <LimitedTextField fx:id="txtOffsetY" layoutX="125.0" layoutY="50.0" maxLength="5" prefHeight="26.0"
                              prefWidth="60.0"/>
            <Button layoutX="85.0" layoutY="85.0" mnemonicParsing="false" onAction="#btnApplyOffset" text="Apply"/>
            <Button layoutX="269.0" layoutY="25.0" mnemonicParsing="false" text="About" onAction="#btnAbout"/>
        </AnchorPane>
    </Tab>
    <Tab text="ColorSpace">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="600.0" prefWidth="800.0">
            <ScrollPane layoutX="14.0" layoutY="11.0" prefHeight="545.0" prefWidth="773.0">
                <VBox fx:id="ColorSpaceVBox" prefHeight="537.0" prefWidth="769.0"/>
            </ScrollPane>
        </AnchorPane>
    </Tab>
</TabPane>
